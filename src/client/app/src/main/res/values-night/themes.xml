<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ExpenseTracker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/forest_green_medium</item>
        <item name="colorPrimaryVariant">@color/forest_green_dark</item>
        <item name="colorOnPrimary">@color/cream_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cream_medium</item>
        <item name="colorSecondaryVariant">@color/cream_light</item>
        <item name="colorOnSecondary">@color/forest_green_medium</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="backgroundTint">@color/forest_green_dark</item>
    </style>
    <style name="Widget.BottomNavigationView.ExpenseTracker" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@color/bottom_nav_item_color_selector</item>
        <item name="itemTextColor">@color/bottom_nav_item_color_selector</item>
        <item name="backgroundTint">@color/forest_green_medium</item>
    </style>
</resources>